{
    "manifest_version": 2,
    "name": "YouTube Show Progress",
    "version": "1.0",
    "description": "Display custom progress bar for YouTube videos.",
    "permissions": [
        "activeTab"
    ],
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/watch*"],
            "js": ["content.js"]
        }
    ]
}
